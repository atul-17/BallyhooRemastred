<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/_10sdp"
            app:ignore="NamespaceTypo"
            card_view:cardBackgroundColor="@color/smoky_white"
            card_view:cardCornerRadius="@dimen/_15sdp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/ll_brand_name"
                    android:layout_below="@+id/ll_activity_title"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_brand_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.65"
                        android:ellipsize="end"
                        android:fontFamily="@font/madeleina_sans"
                        android:gravity="left|center"
                        android:maxLines="1"
                        android:text="55 Wall Street"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/ll_activity_title"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_activity_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.65"
                        android:ellipsize="end"
                        android:fontFamily="@font/madeleina_sans"
                        android:gravity="left|center"
                        android:maxLines="1"
                        android:text="Holi Festival"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp" />


                </LinearLayout>

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:text="March 23rd"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/quicksand_regular"

                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:maxLines="2"
                    android:text="2, 55, 19th Main Rd, 2nd Phase, JP Nagar, Bengaluru, Karnataka 560078"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|left"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:fontFamily="@font/madeleina_sans"
                            android:text="Ratings:"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_14ssp" />

                        <RatingBar
                            android:id="@+id/rating_bar_merchant_ratings"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="0.5"
                            android:theme="@style/RatingBar2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|left"
                            android:fontFamily="@font/madeleina_sans"
                            android:text="Popularity:"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_14ssp" />

                        <example.atul.ballyhoohomescreenappchanges.TextAwesome
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="@string/fa_heart"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center|left"
                            android:text="85%"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/riv_pic_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:scaleType="fitCenter"
                        app:siRadius="10dp" />


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/riv_pic_2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:scaleType="fitCenter"
                        app:siRadius="10dp" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/riv_pic_3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:scaleType="fitCenter"
                        app:siRadius="6dp" />

                    <com.github.siyamed.shapeimageview.RoundedImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:scaleType="fitCenter"
                        android:src="@drawable/food_2"
                        app:siRadius="6dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_merchant_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:maxLines="3"
                    android:text="Bengaluru (also called Bangalore) is the capital of India's southern Karnataka state. The center of India's high-tech industry, the city is also known for its parks and nightlife. By Cubbon Park, Vidhana Soudha is a Neo-Dravidian legislative building. "
                    android:textColor="@color/ligher_black"
                    android:textSize="@dimen/_11ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/ll_offer_details"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/light_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/madeleina_sans"
                    android:text="Offer Highlights"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_17ssp" />


                <TextView
                    android:id="@+id/tv_merchant_offer_highlights"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:maxLines="3"
                    android:text="Bengaluru (also called Bangalore) is the capital of India's southern Karnataka state. The center of India's high-tech industry, the city is also known for its parks and nightlife. By Cubbon Park, Vidhana Soudha is a Neo-Dravidian legislative building. "
                    android:textColor="@color/ligher_black"
                    android:textSize="@dimen/_11ssp" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/light_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/madeleina_sans"
                    android:text="Price"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_17ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">


                    <example.atul.ballyhoohomescreenappchanges.TextAwesome
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/fa_rupee"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_10ssp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:text="1000 onwards"
                        android:textColor="@color/ligher_black"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/light_grey" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/faqs" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.9"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:fontFamily="@font/madeleina_sans"
                        android:text="FAQs"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_17ssp" />

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/next_arrow" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/directions" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/madeleina_sans"
                        android:text="Directions"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_17ssp" />


                </LinearLayout>


                <com.google.android.gms.maps.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_10sdp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/light_grey" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/madeleina_sans"
                        android:text="Find us on Faceboook"
                        android:id="@+id/tv_find_us_on_facebook"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_17ssp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="Powered By Facebook"
                        android:layout_below="@+id/tv_find_us_on_facebook"
                        android:id="@+id/tv_powered_by_facebook"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/next_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/light_grey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/call_the_restraunt_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/madeleina_sans"
                        android:text="Call the merchant"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_17ssp" />

                    <TextView
                        android:id="@+id/restaurant_nos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/call_the_restraunt_label"
                        android:text="+91 7795293966"
                        android:textColor="@color/ligher_black"
                        android:textSize="@dimen/_12ssp" />


                    <LinearLayout
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circular_button">

                        <example.atul.ballyhoohomescreenappchanges.TextAwesome
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/fa_phone"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20ssp" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/light_grey" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/terms" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.9"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:fontFamily="@font/madeleina_sans"
                        android:text="Terms"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_17ssp" />

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/next_arrow" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/light_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/madeleina_sans"
                    android:text="Tags"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_17ssp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:background="@drawable/blue_border_button">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="#Buffets"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".5"
                        android:background="@drawable/blue_border_button">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="#Happy Hours"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/ll_offer_details"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/light_grey" />

                <TextView
                    android:id="@+id/tv_collections_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_view_details"
                    android:layout_gravity="center"
                    android:fontFamily="@font/madeleina_sans"
                    android:gravity="left|center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Also Featured In:"
                    android:textColor="@color/ligher_black"
                    android:textSize="@dimen/_17ssp"
                    android:textStyle="normal" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_featured_collections"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/tv_collections_label"
                    android:orientation="horizontal" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/tv_collections_label"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/light_grey" />

                <!--<android.support.v7.widget.AppCompatButton-->
                <!--android:layout_width="@dimen/_200sdp"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:background="@drawable/rounded_shape"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="@dimen/_15ssp"-->
                <!--android:layout_marginTop="@dimen/_10sdp"-->
                <!--android:text="Book"-->
                <!--android:layout_height="@dimen/_45sdp" />-->

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

    </ScrollView>
</LinearLayout>