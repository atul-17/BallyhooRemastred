<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/iv_discover_tab_pic"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:src="@drawable/food_2"
        app:civ_border_color="@color/red"
        app:civ_border_width="@dimen/_2sdp"
        app:civ_shadow="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        app:civ_shadow_color="@color/red_lighest"
        app:civ_shadow_gravity="center"
        app:civ_shadow_radius="5" />

    <TextView
        android:id="@+id/tv_discover_tab_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_discover_tab_pic"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/quicksand_regular"
        android:gravity="center_horizontal"
        android:text="Trending"
        android:textColor="@color/ligher_black"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold" />


</RelativeLayout>